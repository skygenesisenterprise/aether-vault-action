# Aether Vault Action Environment Configuration
# Copy this file to .env and modify as needed

# Logging Configuration
LOG_LEVEL=info

# Vault Configuration
VAULT_URL=https://vault.demo.local
AUTH_METHOD=github-oidc
ROLE=demo-role
POLICY_MODE=enforce
AUDIENCE=aether-vault
ALLOW_TOKEN_OUTPUT=false

# GitHub Actions Environment (for testing)
GITHUB_REPOSITORY=skygenesisenterprise/aether-vault
GITHUB_REF=refs/heads/main
GITHUB_SHA=demo-sha-12345
GITHUB_WORKFLOW=demo-workflow
GITHUB_ACTION=aether-vault
GITHUB_ACTOR=demo-user

# GitHub OIDC Configuration (for testing)
ACTIONS_ID_TOKEN_REQUEST_URL=https://token.actions.githubusercontent.com
ACTIONS_ID_TOKEN_REQUEST_TOKEN=demo-token-12345

# Development Configuration
DEV_MODE=false
MOCK_VAULT=true

# Docker Configuration
COMPOSE_PROJECT_NAME=aether-vault-action
COMPOSE_FILE=docker-compose.yml

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16

# Resource Limits
CPU_LIMIT=0.5
MEMORY_LIMIT=128M
CPU_RESERVATION=0.1
MEMORY_RESERVATION=64M

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s